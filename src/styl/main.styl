.reveal section {
  img.robot-img {
    border 0
    width 500px
    box-shadow none
    margin 0
    background none
    position: relative;
    top: -5px;
    max-width none
    max-height none
  }
}

.robot-img-wrapper
  width: 570px;
  height: 365px;
  margin: 0 auto !important;
  overflow: hidden;
